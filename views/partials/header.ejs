<header id="top-header">
  <h1>
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>
  </h1>

  <% if (locals.loggedin === 1) { %>
    <div id="tools">
      <!-- Welcome link to account management -->
      <a title="Account page" href="/account/management">
        Welcome <%- locals.accountData.account_firstname %>
      </a>
      <!-- Logout link -->
      <a title="Log out" href="/account/logout">Logout</a>
    </div>
  <% } else { %>
    <div id="tools">
      <!-- My Account link when logged out -->
      <a title="Click to log in" href="/account/login">My Account</a>
    </div>
  <% } %>
</header>
