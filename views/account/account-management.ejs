<h1><%- title %></h1>

<%- messages() %>

<% if (errors && errors.length) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<% if (locals.accountData) { %>
  <% if (locals.accountData.account_type === "Client") { %>
    <h2>Welcome <%- locals.accountData.account_firstname %></h2>
    <p><a href="/account/update/<%- locals.accountData.account_id %>">Update account information</a></p>
  <% } else if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
    <h2>Welcome <%- locals.accountData.account_firstname %></h2>
    <p><a href="/account/update/<%- locals.accountData.account_id %>">Update account information</a></p>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
  <% } %>

  <h3>You're logged in</h3>
  <p><a href="/account/logout">Logout</a></p>
<% } else { %>
  <p>Please <a href="/account/login">log in</a> to access your account.</p>
<% } %>
