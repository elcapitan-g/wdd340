<%- include('../partials/header') %>

<h1>My Favorite Vehicles</h1>

<% if (favorites.length === 0) { %>
  <p>You have no favorite vehicles yet.</p>
<% } else { %>
  <ul id="favorites-list">
    <% favorites.forEach(fav => { %>
      <li>
        <a href="/inv/detail/<%= fav.inv_id %>">
          <%= fav.inv_make %> <%= fav.inv_model %> (<%= fav.inv_year %>)
        </a>
        <form method="POST" action="/favorites/remove" style="display:inline;">
          <input type="hidden" name="inv_id" value="<%= fav.inv_id %>" />
          <button type="submit">Remove</button>
        </form>
      </li>
    <% }); %>
  </ul>
<% } %>

<%- include('../partials/footer') %>
