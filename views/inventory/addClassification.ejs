<h1><%- title %></h1>

<% if (messages.notice) { %>
  <div class="notice">
    <% messages.notice.forEach(msg => { %>
      <p><%= msg %></p>
    <% }) %>
  </div>
<% } %>

<% if (errors && errors.array) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form class="input-box" action="/inv/add-classification" method="post" novalidate>
  <label>Classification Name
    <input 
      type="text" 
      name="classification_name" 
      required 
      pattern="[A-Za-z0-9]+" 
      title="Alphanumeric characters only, no spaces" 
      value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>">
  </label>
  <span class="fine-print">Required. Alphanumeric, no spaces.</span>
  <input type="submit" value="Add Classification">
</form>